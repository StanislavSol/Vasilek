
Процедура ВыпискаБанка(ТабДок, Ссылка) Экспорт
	//{{_КОНСТРУКТОР_ПЕЧАТИ(ВыпискаБанка)
	Макет = Документы.ВыпискаБанка.ПолучитьМакет("ВыпискаБанка");
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ВыпискаБанка.Дата,
	|	ВыпискаБанка.Комментарий,
	|	ВыпискаБанка.Номер,
	|	ВыпискаБанка.ПоступлениеДС.(
	|		НомерСтроки,
	|		Контрагент,
	|		Договор,
	|		Сумма,
	|		НазначениеПлатежа
	|	),
	|	ВыпискаБанка.СписаниеДС.(
	|		НомерСтроки,
	|		Контрагент,
	|		Договор,
	|		Сумма,
	|		НазначениеПлатежа
	|	)
	|ИЗ
	|	Документ.ВыпискаБанка КАК ВыпискаБанка
	|ГДЕ
	|	ВыпискаБанка.Ссылка В (&Ссылка)";
	Запрос.Параметры.Вставить("Ссылка", Ссылка);
	Выборка = Запрос.Выполнить().Выбрать();

	ОбластьЗаголовок = Макет.ПолучитьОбласть("Заголовок");
	Шапка = Макет.ПолучитьОбласть("Шапка");
	ОбластьПоступлениеДСШапка = Макет.ПолучитьОбласть("ПоступлениеДСШапка");
	ОбластьПоступлениеДС = Макет.ПолучитьОбласть("ПоступлениеДС");
	ОбластьСписаниеДСШапка = Макет.ПолучитьОбласть("СписаниеДСШапка");
	ОбластьСписаниеДС = Макет.ПолучитьОбласть("СписаниеДС");
	Подвал = Макет.ПолучитьОбласть("Подвал");

	ТабДок.Очистить();

	ВставлятьРазделительСтраниц = Ложь;
	Пока Выборка.Следующий() Цикл
		Если ВставлятьРазделительСтраниц Тогда
			ТабДок.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;

		ТабДок.Вывести(ОбластьЗаголовок);

		Шапка.Параметры.Заполнить(Выборка);
		ТабДок.Вывести(Шапка, Выборка.Уровень());

		ТабДок.Вывести(ОбластьПоступлениеДСШапка);
		ВыборкаПоступлениеДС = Выборка.ПоступлениеДС.Выбрать();
		Пока ВыборкаПоступлениеДС.Следующий() Цикл
			ОбластьПоступлениеДС.Параметры.Заполнить(ВыборкаПоступлениеДС);
			ТабДок.Вывести(ОбластьПоступлениеДС, ВыборкаПоступлениеДС.Уровень());
		КонецЦикла;

		ТабДок.Вывести(ОбластьСписаниеДСШапка);
		ВыборкаСписаниеДС = Выборка.СписаниеДС.Выбрать();
		Пока ВыборкаСписаниеДС.Следующий() Цикл
			ОбластьСписаниеДС.Параметры.Заполнить(ВыборкаСписаниеДС);
			ТабДок.Вывести(ОбластьСписаниеДС, ВыборкаСписаниеДС.Уровень());
		КонецЦикла;

		Подвал.Параметры.Заполнить(Выборка);
		ТабДок.Вывести(Подвал);

		ВставлятьРазделительСтраниц = Истина;
	КонецЦикла;
	//}}
КонецПроцедуры
